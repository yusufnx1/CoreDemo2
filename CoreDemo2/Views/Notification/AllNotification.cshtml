@using EntityLayer.Concrete
@model List<Notification>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}



<div class="container">
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tüm Bildirimler</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Bildirim </th>
                        <th> Tarih </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="py-1">
                                <img src="~/writer/assets/images/faces-clipart/pic-1.png" alt="image">
                            </td>
                            <td> @item.NotificationDetails </td>
                            <td> @item.NotificationDate.ToShortDateString() </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
</div>