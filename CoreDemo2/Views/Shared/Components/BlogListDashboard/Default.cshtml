@using EntityLayer.Concrete
@model List<Blog>

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Son 10 Blog</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Blog Başlığı</th>
                            <th>Kategori Adı</th>
                            <th>Oluşturma Tarihi</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                @foreach (var item in Model)
                {
                        <tbody>
                            <tr>
                                <td>
                                    <img src="@item.BlogImage" class="mr-2" alt="image"> 
                                </td>
                                <td>
                                    @item.BlogTitle
                                </td>
                                <td>
                                    <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                                </td>
                                <td> @item.BlogCreateDate.ToString("dd-MM-yyyy") </td>
                                <td> <a class="btn btn-outline-dark" href="/Blog/BlogReadAll/@item.BlogId">Detaylar</td>
                            </tr>
                        </tbody>
                }
                </table>
            </div>
        </div>
    </div>
</div>