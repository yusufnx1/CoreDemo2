@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="container">
    @using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
    {
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Profilimi Düzenle</h3>
                    <form class="forms-sample">
                        <div class="form-group">
                            <label for="exampleInputName1">Adınız Soyadınız</label>
                            @Html.HiddenFor(x=>x.WriterId)
                            @Html.TextBoxFor(x=>x.WriterName,new {@class="form-control"})
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">E-Posta</label>
                            @Html.TextBoxFor(x=>x.WriterMail,new {@class="form-control"})
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword4">Şifreniz</label>
                            @Html.PasswordFor(x=>x.WriterPassword,new {@class="form-control"})
                        </div>
                        <div class="form-group">
                            <label>Resminiz</label>
                            <input type="file" name="img[]" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                @Html.TextBoxFor(x=>x.WriterImage,new {@class="form-control"})
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-gradient-primary" type="button">Yükle</button>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleTextarea1">Hakkımda</label>
                            @Html.TextAreaFor(x=>x.WriterAbout,10,3,new {@class="form-control"})
                        </div>
                        <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                        <button class="btn btn-light" href="/Dashboard/Index">Vazgeç</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/writer/assets/js/off-canvas.js"></script>
<script src="~/writer/assets/js/hoverable-collapse.js"></script>
<script src="~/writer/assets/js/misc.js"></script>
<script src="~/writer/assets/js/file-upload.js"></script>