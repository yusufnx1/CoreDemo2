@using EntityLayer.Concrete
@model List<Message2>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="container">
    <h1>Inbox</h1>
    <table class="table table-borderless">
        <tr>
            <td>#</td>
            <td>Konu</td>
            <td>Gönderen</td>
            <td>Tarih</td>
            <td>Mesajı Aç</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.MessageId</th>
                <th>@item.Subject</th>
                <th>@item.SenderUser.WriterName</th>
                <th>@item.MessageDate.ToShortDateString()</th>
                <th><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-outline-danger">Mesajı Aç</a></th>
            </tr>
        }
    </table>
   @* <a href="/Message/NewMessage" class="btn btn-outline-info">Mesaj Gönder</a>*@
</div>